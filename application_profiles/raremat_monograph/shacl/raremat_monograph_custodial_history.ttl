    sh:node custodial_history_property_shapes:bf_partOf_ch_isCustodialHistoryOf ;
    sh:class bf:Item ;
    sh:name "Item" ;
    sh:description "The custodial event belongs to this Item." ; 
    sh:order "10"^^xsd:int ;       
    .


